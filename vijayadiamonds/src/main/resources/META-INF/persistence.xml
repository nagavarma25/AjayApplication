<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="vijayadiamonds"
                      transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.vijayadiamonds.model.Item</class>
        <class>com.vijayadiamonds.model.Customer</class>
        <class>com.vijayadiamonds.model.Transaction</class>
        <class>com.vijayadiamonds.model.Sale</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
    </persistence-unit>
</persistence>